include ../components/link
include ./contact__item
include ../components/input
include ../components/button
section.contact
    .contact__content.container
        h2.contact__title Contact Us
        p.contact__subtitle Most calendars are designed for teams. Slate is designed for freelancers
        .contact__links
            each item in contactLinks
                +link(item.url,item.label)
        .contact__map 
            iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3Af54b31d3f5334a5e4a96588818723e7e1e389d410862241e0c57eb2fb7fe6c22&amp;source=constructor" width="100%" height="400" frameborder="0")
        .contact__contacts
            +contact('../../img/location.svg','6386 Spring St undefined Anchorage, Georgia 12473 United States')
            +contact('../../img/phone.svg','(843) 555-0130')  
            +contact('../../img/mail.svg','willie.jennings@example.com')
        form.contact__form()
            h3 Contact Us
            +input('text','Your Name','gray')
            +input('email','Your Email','gray')
            textarea.concact__message(placeholder = "Your Message")
            +button('Send','blue')


